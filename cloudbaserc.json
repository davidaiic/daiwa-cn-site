{
  "version": "2.0",
  "envId": "${{ secrets.ENVID }}",
  "functionRoot": "cloudfunctions",
  "functions": [
    {
      "name": "comment-list",
      "runtime": "Nodejs18.15",
      "handler": "index.main",
      "timeout": 10,
      "memorySize": 256,
      "installDependency": true,
      "triggers": [
        {
          "name": "http",
          "type": "http",
          "config": {
            "path": "/daiwa-cn-site/api/comment-list",
            "method": "GET"
          }
        }
      ]
    },
    {
      "name": "comment-post",
      "runtime": "Nodejs18.15",
      "handler": "index.main",
      "timeout": 10,
      "memorySize": 256,
      "installDependency": true,
      "triggers": [
        {
          "name": "http",
          "type": "http",
          "config": {
            "path": "/daiwa-cn-site/api/comment-post",
            "method": "POST"
          }
        }
      ]
    },
    {
      "name": "comment-hot",
      "runtime": "Nodejs18.15",
      "handler": "index.main",
      "timeout": 10,
      "memorySize": 256,
      "installDependency": true,
      "triggers": [
        {
          "name": "http",
          "type": "http",
          "config": {
            "path": "/daiwa-cn-site/api/comment-hot",
            "method": "GET"
          }
        }
      ]
    }
  ],
  "framework": {
    "name": "daiwa-cn-site",
    "plugins": {
      "website": {
        "use": "@cloudbase/framework-plugin-website",
        "inputs": {
          "srcPath": "apps/site/dist",
          "cloudPath": "/daiwa-cn-site",
          "ignore": []
        }
      }
    }
  },
  "servicePaths": [
    {
      "path": "/daiwa-cn-site/api/comment-list",
      "type": "scf",
      "name": "comment-list"
    },
    {
      "path": "/daiwa-cn-site/api/comment-post",
      "type": "scf",
      "name": "comment-post"
    },
    {
      "path": "/daiwa-cn-site/api/comment-hot",
      "type": "scf",
      "name": "comment-hot"
    }
  ]
}
