{
  "version": "2.0",
  "envId": "{{env.envId}}",
  "framework": {
    "name": "daiwa-cn-site",
    "plugins": {
      "website": {
        "use": "@cloudbase/framework-plugin-website",
        "inputs": {
          "installCommand": "npm ci || npm i",
          "buildCommand": "npm --prefix apps/site run build",
          "outputPath": "apps/site/dist",
          "cloudPath": "/daiwa-cn-site"
        }
      },
      "functions": {
        "use": "@cloudbase/framework-plugin-function",
        "inputs": {
          "functionRootPath": "functions",
          "functions": [
            {
              "name": "comment-list",
              "runtime": "Nodejs18.15",
              "installDependency": true
            },
            {
              "name": "comment-post",
              "runtime": "Nodejs18.15",
              "installDependency": true
            },
            {
              "name": "comment-hot",
              "runtime": "Nodejs18.15",
              "installDependency": true
            }
          ]
        }
      }
    }
  },
  "servicePaths": {
    "basePath": "/daiwa-cn-site",
    "paths": {
      "api/comment-list": {
        "function": "comment-list",
        "method": "GET"
      },
      "api/comment-post": {
        "function": "comment-post",
        "method": "POST"
      },
      "api/comment-hot": {
        "function": "comment-hot",
        "method": "GET"
      }
    }
  }
}
