{
  "version": "2.0",
  "envId": "{{env.envId}}",
  "framework": {
    "name": "daiwa-cn",
    "plugins": {
      "web": {
        "use": "@cloudbase/framework-plugin-website",
        "inputs": {
          "installCommand": "cd apps/site && (npm ci || npm i)",
          "buildCommand": "cd apps/site && npm run build",
          "outputPath": "apps/site/dist",
          "cloudPath": "/daiwa-cn-site/",
          "ignore": [ ".git", ".github", "node_modules", "cloudbaserc.js" ]
        }
      },
      "fn": {
        "use": "@cloudbase/framework-plugin-function",
        "inputs": {
          "functionRootPath": "functions",
          "functions": [
            {
              "name": "comment-post",
              "runtime": "Nodejs18",
              "installDependency": true,
              "timeout": 10,
              "memorySize": 256,
              "triggers": [
                {
                  "name": "http",
                  "type": "http"
                }
              ]
            },
            {
              "name": "comment-list",
              "runtime": "Nodejs18",
              "installDependency": true,
              "timeout": 10,
              "memorySize": 256,
              "triggers": [
                {
                  "name": "http",
                  "type": "http"
                }
              ]
            }
          ],
          "servicePaths": {
            "comment-post": "/daiwa-cn-site/api/comment-post",
            "comment-list": "/daiwa-cn-site/api/comment-list"
          }
        }
      }
    }
  }
}
