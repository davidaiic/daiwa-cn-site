---
const { items = [] } = Astro.props;
---
<section class="py-12 md:py-16">
  <div class="mx-auto max-w-7xl px-4 grid gap-6 md:grid-cols-3">
    {items.map((it) => (
      <div class="p-6 rounded-lg border shadow-card bg-white">
        <h3 class="text-xl font-semibold">{it.title}</h3>
        <p class="mt-2 text-neutral-600">{it.desc}</p>
      </div>
    ))}
  </div>
</section>
