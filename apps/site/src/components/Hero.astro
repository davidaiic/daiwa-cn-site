---
const { title, subtitle, ctaText = '了解 Biobran', ctaHref = '/zh/biobran/' } = Astro.props;
const base = import.meta.env.BASE_URL || '/';
---
<section class="bg-gradient-to-b from-white to-[#f8fbff]">
  <div class="mx-auto max-w-7xl px-4 py-16 md:py-24">
    <h1 class="text-4xl md:text-6xl font-semibold tracking-tight">{title}</h1>
    <p class="mt-4 text-lg md:text-xl text-neutral-600">{subtitle}</p>
    <div class="mt-8">
      <a href={base + ctaHref.replace(/^\//,'')} class="inline-flex items-center px-6 py-3 rounded-md bg-brand text-white shadow-card">
        {ctaText}
      </a>
    </div>
  </div>
</section>
