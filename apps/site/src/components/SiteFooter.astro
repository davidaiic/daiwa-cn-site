---
const groups = [
  { title: "产品与服务", items: [
    { label: "产品", href: "/biobran/" },
    { label: "搜索", href: "/search/" },
  ]},
  { title: "学术", items: [
    { label: "文献", href: "/papers/" },
    { label: "专家", href: "/experts/" },
  ]},
  { title: "内容", items: [
    { label: "专栏", href: "/columns/" },
    { label: "问答", href: "/wiki/" },
    { label: "新闻", href: "/news/" },
  ]},
  { title: "企业信息", items: [
    { label: "关于", href: "/about/" },
    { label: "联系我们", href: "/about/contact/", dev: true },
    { label: "网站地图", href: "/sitemap/", dev: true },
  ]},
];
---
<footer class="bg-[#194375] text-white mt-16">
  <div class="max-w-6xl mx-auto px-4 pt-8">
    <img src="/foot_logo.svg" alt="Daiwa" class="h-8 w-auto opacity-90" />
  </div>
  <div class="max-w-6xl mx-auto px-4 py-8 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
    {groups.map(g => (
      <div>
        <div class="font-semibold mb-3">{g.title}</div>
        <ul class="space-y-2 text-white/80">
          {g.items.map(i => (
            <li>
              <a href={i.href} class={i.dev ? "js-dev text-white/40 cursor-not-allowed" : "hover:text-white"}>
                {i.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
  <div class="border-t border-white/10">
    <div class="max-w-6xl mx-auto px-4 h-14 flex items-center justify-between text-xs text-white/70">
      <div>© {new Date().getFullYear()}中国独家经销商/总代理 of Daiwa Pharmaceutical Co.,Ltd.</div>
      <div class="flex items-center gap-4">
        <a href="/privacy/" class="hover:text-white">隐私政策</a>
        <a href="/terms/" class="hover:text-white">使用条款</a>
      </div>
    </div>
  </div>
</footer>
<script is:inline type="module">
  function toast(msg){
    const el = document.createElement('div');
    el.textContent = msg;
    Object.assign(el.style, {
      position: 'fixed', left: '50%', bottom: '24px', transform: 'translateX(-50%)',
      background: 'rgba(0,0,0,.82)', color: '#fff', padding: '10px 14px',
      borderRadius: '12px', fontSize: '14px', lineHeight: '1', zIndex: 1000,
      boxShadow: '0 4px 14px rgba(0,0,0,.25)', pointerEvents: 'none'
    });
    document.body.appendChild(el); setTimeout(() => el.remove(), 1800);
  }
  const root = document.currentScript?.closest('footer');
  root?.querySelectorAll('a.js-dev').forEach(a => {
    a.addEventListener('click', (e) => { e.preventDefault(); toast('正在开发中'); });
  });
</script>
